{%- extends '_template/bootstrap.html.twig' -%}

{% block pageTitle %}Projects{% endblock %}

{% block bodyContent %}
    <div class="row">
        <div class="col-sm-6">

            {# action toolbar #}
            <div id="action-toolbar">

            {% if clients|length > 0 %}

                {{ form_start(actionForm, {
                    'attr': {'class': 'form-inline'}
                }) }}

                {# client selection box #}
                {{ form_label(actionForm.client, 'Label', {
                    'label_attr': {'class': 'sr-only'}
                }) }}
                {{ form_widget(actionForm.client, {
                    'attr': {'class': 'input-sm'}
                }) }}

                {# client actions #}
                <div class="btn-group" role="group" aria-label="Client Actions">
                    {{ form_widget(actionForm.createClient, {
                        'label': 'New Client',
                        'icon': 'ion-ios-compose-outline',
                        'attr': {'class': 'btn btn-sm btn-warning'}
                    }) }}
                    {{ form_widget(actionForm.editClient, {
                        'label': 'Edit Client',
                        'icon': 'ion-ios-list-outline',
                        'attr': {'class': 'btn btn-sm btn-info'}
                    })}}
                </div>

                {# create project #}
                {{ form_widget(actionForm.createProject, {
                    'label': 'Create Project',
                    'icon': 'ion-ios-compose-outline',
                    'attr': {'class': 'btn-success'}
                }) }}
                {{ form_end(actionForm) }}

            {% else %}

                <p>Welcome to OBOS! Let's <a href="{{ path('clients.add') }}">add your first client</a> and get to work.</p>

            {% endif %}
            </div>
            <hr/>

            <div id="project-listing">
            {% if projects|length > 0 %}

            {% for project in projects %}

                <div class="project-summary panel {{
                project.isOverdue()
                    ? 'panel-danger'
                    : 'panel-default'
                }}">
                    <div class="panel-body">
                        <h4>
                            <a href="{{ path('projects.single_view', {'project': project.id}) }}">{{ project.title }}</a><br>
                            <small>{{ project.client.name }}</small>
                        </h4>
                        <hr/>
                        <div class="row">
                            <div class="project-info-field col-sm-4">
                                <i class="text-muted icon ion ion-ios-calendar-outline"></i>
                                {{ project.dateDue|date('n/j/y g:ia') }}
                            </div>
                            <div class="project-info-field col-sm-4">
                                <i class="text-muted icon ion ion-ios-paper-outline"></i>
                                ${{- project.hourlyRate|number_format(2) -}}/hr
                                <span class="text-muted">{{ project.autoBilled ? '(auto-billed)' }}</span>
                            </div>
                            <div class="project-info-field col-sm-4 text-right">
                                <a href="{{ path('projects.edit', {'project': project.id}) }}" class="btn btn-xs btn-info">
                                    Edit
                                    <i class="icon ion ion-ios-list-outline"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% else %}

                <p>You don't have any projects yet.</p>

            {% endif %}
            </div>
        </div>

    </div>
{% endblock %}
{%- extends 'ObosCoreBundle:Base:bootstrap.html.twig' -%}

{% block pageTitle %}Projects{% endblock %}

{% block bodyContent %}
    <div class="row">
        <div class="col-sm-6">
            {% if clients|length == 0 -%}
                <div class="alert alert-notice">
                    Welcome to <b>OBOS</b>! Let's add your first client and get to work.
                </div>
                <div id="action-buttons">
                    <a class="btn btn-warning"
                       href="{{ path('proj_client_add') }}">Add a Client <i class="icon ion ion-ios-plus-outline"></i></a>
                </div>
            {%- else -%}
                <div id="action-buttons">
                    <form class="form-inline" method="post" action="#">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-success">
                                Add <i class="icon ion ion-ios-plus-outline"></i></button>
                            <button type="submit" class="btn btn-warning">
                                Edit <i class="icon ion ion-ios-more-outline"></i></button>
                            <button type="submit" class="btn btn-danger">
                                Delete <i class="icon ion ion-ios-close-outline"></i></button>
                        </div>

                        <div class="form-group">
                            <select class="form-control" name="client">
                            {% for client in clients -%}
                                <option value="{{ client.id }}">{{ client.name }}</option>
                            {%- endfor %}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success">
                            Create Project <i class="icon ion ion-ios-plus-outline"></i>
                        </button>
                    </form>
                </div>
            {%- endif %}
            <hr/>
            {% if projects|length == 0 -%}
                <p>No projects, bro.</p>
            {%- else -%}
            {%- endif %}
        </div>

    </div>
{% endblock %}